<div class="text-center">
  <h1>塗りポイント修正</h1>
</div>
<div class="row my-5">
  <div class="offset-xl-4 col-xl-4 offset-md-3 col-md-6">
    <%= form_with(url: "/scores/revise", local: true) do |f| %>
      <div class="form-group">
        <%= f.label :main_weapon, 'ブキ' %>
        <%= f.collection_select(:main_weapon_id, @main_weapons, :id, :name, {prompt: "選択してください"}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <%= f.label :stage, 'ステージ' %>
        <%= f.collection_select(:stage_id, @stages, :id, :name, {prompt: "選択してください"}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <%= f.label :point, 'ポイント' %>
        <%= f.number_field(:point, class: 'form-control') %>
      </div>
      <%= f.submit '修正する', class: 'btn btn-primary btn-block mt-5' %>
    <% end %>
  </div>
</div>
